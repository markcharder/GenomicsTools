#!/usr/bin/env python

import optparse

desc	= "Utility for gathering the number of variants per sliding window from a vcf for plotting and analytical purposes."

parser	= optparse.OptionParser(description=desc)

parser.add_option(	"-v",
			"--vcf",
			dest="vcf",
			metavar="VCF",
			help="Vcf file for plotting."	)

parser.add_option(	"-t",
			"--type",
			dest="type",
			default="all",
			metavar="TYPE [all/snp/in/del]",
			help="Type of variant to plot."	)

parser.add_option(	"-x",
			"--tab",
			dest="vcf",
			action="store_true",
			default=False,
			help="Produce tab-delimited file with info on SNPs per sliding window."	)

parser.add_option(	"-p",
			"--plot-type",
			dest="plottype",
			default="circular",
			metavar="PLOT TYPE [circular/linear]",
			help="Type of plot to produce. Circular plots reference scaffolds in a circle, linear plots linearly."	)

parser.add_option(	"-f",
			"--format",
			dest="format",
			default="png",
			metavar="FORMAT [png/svg/ps/jpeg/tif/gif]"	)

parser.add_option(	"-s",
			"--scaffold",
			dest="scaffold",
			metavar="SCAFFOLD",
			help="Reference scaffold to be plotted."	)

(options, args)	= parser.parse_args()

if not options.vcf:
	parser.error(	"Please specify input vcf."	)
